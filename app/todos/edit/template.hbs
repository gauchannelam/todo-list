{{outlet}}
<form id = "edit-new-todo-form">
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" value=model.title placeholder = "Add todo..." }}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type="date" class="form-control" value=model.date }}
  </div>
  <div class="form-group">
    <label>Body</label>
    {{textarea class="form-control" value=model.body placeholder = "Todo Body..." }}
  </div>
  <button {{action 'editTodo' model.id}} class="btn btn-primary">Submit</button>
  {{#link-to 'todos' class = "btn btn-default"}}close{{/link-to}}
  <button{{action 'delete' model.id}} class = "btn btn-danger pull-right">Delete</button>
</form>
